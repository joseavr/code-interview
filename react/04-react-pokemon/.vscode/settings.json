{
	"editor.tabSize": 2,

	"git.autofetch": true,

	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"*.ts": "${capture}.test.ts",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts, ${capture}.test.js",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, *.config.js, *.config.ts, *.config.cjs, *.config.mjs , *.json, .*, *.ts, *.yaml"
	},

	"editor.formatOnPaste": false,
	"editor.codeActionsOnSave": {
		"source.addMissingImports.ts": "explicit",
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit",
		"source.fixAll.biome": "explicit"
	},


	"editor.suggest.insertMode": "replace",

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.formatOnSave": true,
	"files.insertFinalNewline": true,

	"typescript.validate.enable": true,
	"javascript.validate.enable": true,

	"[javascript][javascriptreact][typescript][typescriptreact][json][css][tailwindcss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
